-- SCRIPT

local TweenService = game:GetService("TweenService")

local function hideUI()
    Logo.Active = true
    -- Fade out all contents (except Intro) before minimizing
    for _, obj in pairs(Main:GetChildren()) do
        if obj:IsA("GuiObject") and obj ~= Intro then
            TweenService:Create(obj, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {BackgroundTransparency = 1, TextTransparency = 1, ImageTransparency = 1}):Play()
        end
    end
    
    task.wait(0.2)
    -- Minimize the main window
    TweenService:Create(Main, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
        Size = UDim2.fromScale(0.1, 0.175)
    }):Play()
    
    task.wait(0.3)
    -- Fade in the logo on the minimized window
    TweenService:Create(Logo, TweenInfo.new(0.25, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {ImageTransparency = 0}):Play()
    -- Ensure the minimized window has a background for the icon
    TweenService:Create(Main, TweenInfo.new(0.25, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {BackgroundTransparency = 0}):Play()
end

local function showUI()
    Logo.Active = false
    -- Fade out the logo on the minimized window
    TweenService:Create(Logo, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {ImageTransparency = 1}):Play()
    
    task.wait(0.2)
    -- Restore the main window size (Main's background is still visible from the last step)
    TweenService:Create(Main, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
        Size = UDim2.fromScale(0.3, 0.3)
    }):Play()
    
    task.wait(0.3)
    -- Fade in all contents
    for _, obj in pairs(Main:GetChildren()) do
        if obj:IsA("GuiObject") and obj ~= Intro then
            -- Reset transparencies for specific objects
            if obj.Name == "Menu" then
                -- Menu's background remains transparent, only text/scroll bar fades in
                TweenService:Create(obj, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {ScrollBarTransparency = 0}):Play()
            else
                -- Other main elements fade in their backgrounds
                TweenService:Create(obj, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {BackgroundTransparency = 0}):Play()
            end

            -- Fade in Text/Images
            for _, child in pairs(obj:GetChildren()) do
                if child:IsA("TextLabel") or child:IsA("TextBox") or child:IsA("TextButton") then
                    TweenService:Create(child, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {TextTransparency = 0}):Play()
                elseif child:IsA("ImageButton") or child:IsA("ImageLabel") then
                     TweenService:Create(child, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {ImageTransparency = 0}):Play()
                end
            end
        end
    end
    
    -- Finally, fade out the main background for the full transparency look
    TweenService:Create(Main, TweenInfo.new(0.5, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {BackgroundTransparency = 1}):Play()
end

Close.MouseButton1Click:Connect(hideUI)
Logo.MouseButton1Click:Connect(showUI)

local function uiparent()
	local success, parent = pcall(function()
		return gethui()
	end)

	if not success then
		return game:GetService("CoreGui")
	end

	return parent
end

local success, err = pcall(function()
	Arceus.Parent = uiparent()
end)

if not success then
	Arceus.Parent = game:GetService("Players").LocalPlayer.PlayerGui
end

local element_height = 50*Menu.AbsoluteSize.Y/210
local elements = 0

local function AddSpace(parent)
	local space = tab:Clone()
	space.Parent = parent
	space.LayoutOrder = elements
	space.Visible = true

	elements += 1
end

function lib:AddToggle(name, funct, enabled, ...)
	local newTog = Toggle:Clone()
	local args = {...}

	newTog.MouseButton1Click:Connect(function()
		enabled = not enabled
		local check = newTog:WaitForChild("Enabled"):WaitForChild("Check")
        local newTransparency = enabled and 0 or 1
        TweenService:Create(check, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {BackgroundTransparency = newTransparency}):Play()
		funct(enabled, unpack(args))
	end)

    -- Set initial state with tween
    local check = newTog:WaitForChild("Enabled"):WaitForChild("Check")
    check.BackgroundTransparency = enabled and 0 or 1

	newTog:WaitForChild("Name").Text = name

	newTog.Size = UDim2.new(0.95, 0, 0, element_height) -- Y1 = 50 : Y2 = X
	newTog.Name = name
	newTog.Parent = Menu
	newTog.LayoutOrder = elements
	newTog.Visible = true

	elements += 1
	AddSpace(Menu)

	return newTog
end

function lib:AddButton(name, funct, ...)
	local newBut = Button:Clone()
	local args = {...}

    -- Button press animation
    newBut.MouseEnter:Connect(function()
        TweenService:Create(newBut, TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = ELEMENT_BG_TRANSPARENCY - 0.2}):Play()
    end)
    newBut.MouseLeave:Connect(function()
        TweenService:Create(newBut, TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = ELEMENT_BG_TRANSPARENCY}):Play()
    end)

	newBut.MouseButton1Click:Connect(function()
		funct(unpack(args))
	end)

	newBut:WaitForChild("Name").Text = name
	newBut.Size = UDim2.new(0.95, 0, 0, element_height)
	newBut.Name = name
	newBut.Parent = Menu
	newBut.LayoutOrder = elements
	newBut.Visible = true

	elements += 1
	AddSpace(Menu)

	return newBut
end

function lib:AddInputBox(name, funct, placeholder, default, ...)
	local newInput = InputBox:Clone()
	local args = {...}

	newInput:WaitForChild("Name").Text = name
	if placeholder then
		newInput.TextBox.PlaceholderText = placeholder
	end
	if default then
		newInput.TextBox.Text = default
	end

	local textBox = newInput.TextBox
    textBox.TextYAlignment = Enum.TextYAlignment.Center -- Center text

    -- Input box focus animation
    textBox.Focused:Connect(function()
        TweenService:Create(newInput, TweenInfo.new(0.15, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = ELEMENT_BG_TRANSPARENCY - 0.2}):Play()
    end)
    textBox.FocusLost:Connect(function()
        TweenService:Create(newInput, TweenInfo.new(0.15, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = ELEMENT_BG_TRANSPARENCY}):Play()
    end)

	-- Function to handle text submission
	local function submitText()
		local text = textBox.Text
		funct(text, unpack(args))
	end

	-- Submit on Enter key
	textBox.FocusLost:Connect(function(enterPressed)
		if enterPressed then
			submitText()
		end
	end)

	-- Submit on clicking outside the text box
	textBox.FocusLost:Connect(submitText)

	-- Optional: Add a submit button functionality
	newInput.MouseButton1Click:Connect(function()
		if not textBox:IsFocused() then
			textBox:CaptureFocus()
		end
	end)

	newInput.Size = UDim2.new(0.95, 0, 0, element_height)
	newInput.Name = name
	newInput.Parent = Menu
	newInput.LayoutOrder = elements
	newInput.Visible = true

	elements += 1
	AddSpace(Menu)

	-- Return the input box and text box for external control
	local inputObj = {
		Frame = newInput,
		TextBox = textBox,
		GetText = function()
			return textBox.Text
		end,
		SetText = function(newText)
			textBox.Text = newText or ""
		end,
		Clear = function()
			textBox.Text = ""
		end,
		SetPlaceholder = function(placeholderText)
			textBox.PlaceholderText = placeholderText or "Enter text..."
		end
	}

	return inputObj
end

function lib:AddComboBox(text, options, funct, ...) -- ADD CUSTOM ELEMENT INSTEAD
	local newCombo = ComboBox:Clone()
	local enabled = false
	local elems = {}
	local args = {...}

	local function setBoxState()
        local rotation = enabled and 180 or 90
        TweenService:Create(newCombo:WaitForChild("Img"), TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Rotation = rotation}):Play()
		for _, elem in ipairs(elems) do
            local newTransparency = enabled and ELEMENT_BG_TRANSPARENCY or 1
            TweenService:Create(elem, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = newTransparency}):Play()
			elem.Visible = enabled -- Control visibility after tween
		end
	end

	newCombo.MouseButton1Click:Connect(function()
		enabled = not enabled
		setBoxState()
	end)

	newCombo:WaitForChild("Name").Text = text .. ": " .. (#options > 0 and options[1] or "")
	newCombo.Size = UDim2.new(0.95, 0, 0, element_height)
	newCombo.Name = #options > 0 and options[1] or ""
	newCombo.Parent = Menu
	newCombo.LayoutOrder = elements
	newCombo.Visible = true

	elements += 1
	AddSpace(Menu)

	for _, name in ipairs(options) do
		local newElem = ComboElem:Clone()
		table.insert(elems, newElem)

		newElem.MouseButton1Click:Connect(function()
			newCombo:WaitForChild("Name").Text = text .. ": " .. name
			enabled = false
			setBoxState()

			funct(name, unpack(args))
		end)
        
        -- Hover effect for combo elements
        newElem.MouseEnter:Connect(function()
            TweenService:Create(newElem, TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = ELEMENT_BG_TRANSPARENCY - 0.2}):Play()
        end)
        newElem.MouseLeave:Connect(function()
            if newElem.Parent and enabled then -- Only restore if it's currently part of the visible dropdown
                TweenService:Create(newElem, TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = ELEMENT_BG_TRANSPARENCY}):Play()
            end
        end)


		newElem:WaitForChild("Name").Text = name
		newElem.Size = UDim2.new(0.95, 0, 0, element_height)
		newElem.Name = name
		newElem.Parent = Menu
		newElem.LayoutOrder = elements
		newElem.Visible = false -- Start invisible
        newElem.BackgroundTransparency = 1 -- Start fully transparent for fade in/out

		elements += 1
		AddSpace(Menu)
	end

	return newCombo
end

function lib:SetTitle(txt)
    Title.Text = txt
end

function lib:SetIcon(img)
    Logo.Image = img
end

function lib:SetBackgroundColor(r, g ,b, transparency)
    Main.BackgroundColor3 = Color3.fromRGB(r, g, b)
    Intro.BackgroundColor3 = Color3.fromRGB(r, g, b)
    
    -- Option to set transparency for the main window background (shadow border remains)
    if transparency ~= nil then
        Main.BackgroundTransparency = transparency
        Intro.BackgroundTransparency = transparency
    end
end

function lib:SetTitleColor(r, g, b)
    Title.TextColor3 = Color3.fromRGB(r, g, b)
end

function lib:SetCloseBtnColor(r, g, b)
    Close.TextColor3 = Color3.fromRGB(r, g, b)
	Img_2.TextColor3 = Color3.fromRGB(r, g, b)
	Check.BackgroundColor3 = Color3.fromRGB(r, g, b)
end

function lib:SetButtonsColor(r, g ,b)
    Toggle.BackgroundColor3 = Color3.fromRGB(r, g, b)
    Toggle.BackgroundTransparency = ELEMENT_BG_TRANSPARENCY -- Maintain semi-transparency
	Button.BackgroundColor3 = Color3.fromRGB(r, g, b)
    Button.BackgroundTransparency = ELEMENT_BG_TRANSPARENCY
	ComboElem.BackgroundColor3 = Color3.fromRGB(r, g, b)
    ComboElem.BackgroundTransparency = ELEMENT_BG_TRANSPARENCY
	ComboBox.BackgroundColor3 = Color3.fromRGB(r, g, b)
    ComboBox.BackgroundTransparency = ELEMENT_BG_TRANSPARENCY
	InputBox.BackgroundColor3 = Color3.fromRGB(r, g, b)
    InputBox.BackgroundTransparency = ELEMENT_BG_TRANSPARENCY
end

function lib:SetInputBoxColor(r, g, b)
    -- Main element container retains button color
    InputBox.BackgroundColor3 = Color3.fromRGB(r, g, b)
    InputBox.BackgroundTransparency = ELEMENT_BG_TRANSPARENCY

    -- Text box is darker/offset for contrast
    TextBox.BackgroundColor3 = Color3.fromRGB(math.max(0, r-15), math.max(0, g-15), math.max(0, b-15))
    TextBox.BackgroundTransparency = 0.2 -- Small transparency for the text box itself
end

function lib:SetTheme(theme)
	if theme == "Default" then
        lib:SetBackgroundColor(40, 40, 40, 1) -- Fully transparent
        lib:SetButtonsColor(55, 55, 55)
        lib:SetCloseBtnColor(255, 0, 0)
        lib:SetTitleColor(255, 255, 255)
        lib:SetInputBoxColor(55, 55, 55)
	elseif theme == "TomorrowNightBlue" then
		lib:SetButtonsColor(74, 208, 238)
		lib:SetCloseBtnColor(74, 208, 238)
		lib:SetBackgroundColor(5, 16, 58, 0.8) -- Slightly opaque background
		lib:SetInputBoxColor(74, 208, 238)
        lib:SetTitleColor(255, 255, 255)
	elseif theme == "HighContrast" then
		lib:SetBackgroundColor(0, 0, 0, 0.8)
		lib:SetButtonsColor(20, 20, 20)
		lib:SetCloseBtnColor(255, 255, 0)
		lib:SetInputBoxColor(20, 20, 20)
        lib:SetTitleColor(255, 255, 255)
	elseif theme == "Aqua" then
		lib:SetBackgroundColor(44, 62, 82, 0.9)
		lib:SetButtonsColor(52, 74, 95)
		lib:SetCloseBtnColor(26, 189, 158)
		lib:SetInputBoxColor(52, 74, 95)
        lib:SetTitleColor(255, 255, 255)
	elseif theme == "Ocean" then
		lib:SetBackgroundColor(26, 32, 58, 0.9)
		lib:SetButtonsColor(38, 45, 71)
		lib:SetCloseBtnColor(86, 76, 251)
		lib:SetInputBoxColor(38, 45, 71)
        lib:SetTitleColor(255, 255, 255)
	else
		error("Theme not found.")
	end
end

-- INIT (Initial Fade-In)

-- 1. Initial size and position (Main is currently invisible/transparent)
Main:TweenSize(
	UDim2.fromScale(0.3, 0.3),
	Enum.EasingDirection.Out,
	Enum.EasingStyle.Quad,
	0.5, true, nil -- Faster intro
)

task.wait(0.5)

-- 2. Fade in the logo at its intro position
TweenService:Create(Logo, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {ImageTransparency = 0}):Play()
-- And fade in the intro frame background
TweenService:Create(Intro, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = 0}):Play()

task.wait(1)

-- 3. Shrink and move the logo to the corner
Logo:TweenSizeAndPosition(
	UDim2.fromScale(0.175, 0.175),
	UDim2.fromScale(0.075, 0.15),
	Enum.EasingDirection.Out,
	Enum.EasingStyle.Quad,
	0.5, true, nil
)

task.wait(0.5)

-- 4. Fade out the temporary Intro screen and fade in all other UI elements
-- The showUI function handles this from the logo-in-corner state.
showUI()
TweenService:Create(Intro, TweenInfo.new(0.5, Enum.EasingStyle.Linear, Enum.EasingDirection.In), {BackgroundTransparency = 1}):Play()


return lib
